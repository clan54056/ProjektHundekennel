<UserControl x:Class="ProjektHundekennel.Views.UserControls.MainNevigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjektHundekennel.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Menu Grid.Column="0" VerticalAlignment="Center" Background="Transparent" Foreground="Black" FontSize="20">
            <MenuItem Header="Menu">
                <MenuItem Header="Forside" FontSize="16"/>
                <MenuItem Header="Opret avlssenarie" FontSize="16"/>
            </MenuItem>
        </Menu>

        <TextBlock
        Grid.Column="1"
        HorizontalAlignment="Center"
        Text="Mit hundekennel program"
        FontSize="25"
        VerticalAlignment="Center" />
    </Grid>
</UserControl>
